<resources>

  <style name="AppTheme"
      parent="AppTheme.Base"/>

  <!-- the theme applied to the application or activity -->
  <style name="AppTheme.Base"
      parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:textColorSecondary">@color/secondary_text</item>
    <item name="android:textColorPrimary">@color/primary_text</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="actionModeBackground">@color/primary</item>
  </style>

  <style name="labelTextStyle" parent="TextAppearance.AppCompat.Body1">
    <item name="android:textSize">@dimen/text_size_small</item>
    <item name="android:textColor">@color/secondary_text</item>
  </style>
  <style name="factTextStyle" parent="labelTextStyle">
    <item name="android:paddingLeft">@dimen/spacing_title_margin</item>
    <item name="android:paddingBottom">@dimen/spacing_micro</item>
    <item name="android:paddingTop">@dimen/spacing_micro</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="overviewTextStyle" parent="labelTextStyle">
    <item name="android:paddingLeft">@dimen/spacing_major</item>
    <item name="android:paddingRight">@dimen/spacing_major</item>
    <item name="android:paddingBottom">@dimen/spacing_major</item>
    <item name="android:lineSpacingMultiplier">1.5</item>
  </style>

  <style name="titleTextStyle" parent="Base.TextAppearance.AppCompat.Title">
    <item name="android:paddingTop">@dimen/spacing_minor</item>
    <item name="android:paddingBottom">@dimen/spacing_minor</item>
  </style>

  <style name="movieTitle" parent="titleTextStyle">
    <item name="android:layout_marginLeft">@dimen/spacing_title_margin</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="labelTitle" parent="titleTextStyle">
    <item name="android:paddingLeft">@dimen/spacing_major</item>
    <item name="android:textColor">@color/primary_text</item>
  </style>


</resources>
